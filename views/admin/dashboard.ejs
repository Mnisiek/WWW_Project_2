<div class="admin-title">
  <h1 class="h1-about">Artykuły</h1>
  <a href="/add-post" class="btn">+ Dodaj nowy</a>
</div>

<section class="articles" style="margin: 10px 20px 10px 20px">
<ul>
  <% data.forEach(post => { %>
      <li>
          <a href="/post/<%= post._id %>" class="article-ul">
            <%= post.title %> &nearr; </a>
      <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn btn-edit">Edytuj</a>

          <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Usuń" class="btn btn-delete">
          </form>
      </div>
      <br>
      </li>
  <% }) %>
</ul>
</section>